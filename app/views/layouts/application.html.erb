<!DOCTYPE html>
<html>
<head>
  <title>Pol</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Paul Colusso</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <%= nav_link_to link: 'Home', target_controller: 'welcome' %>
            <%= nav_link_to link: 'Journal', target_controller: 'journal' %>
            <%= nav_link_to link: 'Gallery', target_controller: 'gallery' %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <div class="centre">
        <%= yield %>
      </div>

    </div><!-- /.container -->
	<div class="container">
    <footer class="footer">
      <hr>
	    <p>&copy; Paul Colusso, <%= Time.now.year %></p>
	  </footer> 
  </div>
</body>
</html>
